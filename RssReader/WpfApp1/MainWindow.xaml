<Window x:Name="winRssReader" x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="552.045" Width="1247.272">

    <StackPanel Margin="10,10,10,10">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtRssUrl" Margin="0, 0, 10, 0" Grid.Column="0" Text="RSS source URL" />
            <Button x:Name="btnLoadRss" Margin="10, 0, 0, 0" Grid.Column="1" Content="Load RSS " Click="btnLoadRss_Click" />
        </Grid>

        <TextBlock x:Name="txt" Margin="0, 10, 0, 0" Text="Latest Articles" FontWeight="Bold" />
        <ListView x:Name="lvwArticle" Margin="0, 10, 0, 0" Height="470" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Article" DisplayMemberBinding="{Binding Article}"/> 
                </GridView>
            </ListView.View>
        </ListView>

    </StackPanel>
</Window>
